  color: white;
  background-color: black;
  -moz-border-radius: 15px;
  -webkit-border-radius: 15px;
  border: 5px solid black;
  padding: 5px;
  margin-bottom: 10px;
}
#pageContent .inputButton:hover {
  font-size: 15px;
  color: black;
  background-color: white;
  -moz-border-radius: 15px;
  -webkit-border-radius: 15px;
  border: 5px solid black;
  padding: 5px;
  margin-bottom: 10px;
}

.inProgress {
  font-family: "Neucha";
  text-align: center;
  font-size: 25px;
  margin-top: 15px;
}
/***************************
Side Nav
***************************/
.logo {
  width: 160px;
  height: 150px;
  margin-left: 50px;
  position: absolute;
  cursor:pointer;
  -webkit-transition: all 2s ease-in-out;
  -moz-transition: all 2s ease-in-out;
  -ms-transition: all 2s ease-in-out;
  -o-transition: all 2s ease-in-out;
  transition: all 2s ease-in-out;
}
.logo { display:block }
@media screen and (max-width:1153px) {
    .logo {
      -webkit-opacity: 0;
      -moz-opacity: 0;
      opacity: 0;
      }
}


.sidenav {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: white;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
}

.sidenav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: black;
    display: block;
    transition: 0.3s
}

.sidenav a:hover, .offcanvas a:focus{
    color: #26aa00;
}

.closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px !important;
    margin-left: 50px;
}

#logo {
    transition: margin-left .5s;
}

@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}

